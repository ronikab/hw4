<h1><%= @place["name"] %></h1>
<h2>My Posts</h2>

<div class="row">

<% for post in @posts %>
<div class="col-3">
  <h3><%= post["title"] %></h3>
  <h4><%= post["posted_on"] %></h4>
  <img class="img-fluid" src="<%= post["image"] %>" class="w-full">
  <p><%= post["description"] %></p>
  </div>
<% end %>

<p>
  <a href="/posts/new?place_id=<%= @place["id"] %>">New Post</a>
</p>

<p>
  <a href="/places">Back to All Places</a>
</p>

</div>